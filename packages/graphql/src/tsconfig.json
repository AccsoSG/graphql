{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        // TODO Refactor so that noImplicitAny is no longer needed
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "outDir": "../dist"
    },
    "exclude": ["**/*.test.ts"],
    "references": [
        { "path": "../" } // for package.json import
    ]
}
